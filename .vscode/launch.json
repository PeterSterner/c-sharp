{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (console)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/bin/Debug/net8.0/c-sharp.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal", // eller "internalConsole" hvis du foretrækker det
      "stopAtEntry": false,
      "justMyCode": false, // slå fra hvis du *kun* vil debugge din egen kode
      "logging": {
        "moduleLoad": false,
        "diagnosticsLog": {
          "protocolMessages": false
        },
        "programOutput": true
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
